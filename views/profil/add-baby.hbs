{{>header}}
<div class="tabs is-centered">
  <ul>
    <li class="is-active"><a>Mes enfants</a></li>
    <li><a href="/add-baby">Ajouter un enfant</a></li>
    <li><a href="/update">Mise à jour de vos infos</a></li>
    <li><a href="/manage">Gérer la garde</a></li>
  </ul>
</div>
<br>
<div class="container section">
<h1 class="title-form">Ajouter un bb</h1>
  <div class="form form-signup" id="form">

    <form action="/add-baby" method="post" enctype="multipart/form-data">
      <p class="control has-icons-left has-icons-right">
        <input class="input" type="text" name="babyname" placeholder="Prénom de l'enfant">
        <span class="icon is-small is-left">
          <i class="fas fa-baby"></i>
        </span>
        <span class="icon is-small is-right">
          <i class="fas fa-check"></i>
        </span>
      </p>
      <p class="control has-icons-left has-icons-right">
        <input class="input" type="text" name="babyage" placeholder="Age de l'enfant">
        <span class="icon is-small is-left">
          <i class="fas fa-baby"></i>
        </span>
        <span class="icon is-small is-right">
          <i class="fas fa-check"></i>
        </span>
      </p>

      <p class="control has-icons-left has-icons-right">
        <input class="input" type="file" name="photo" placeholder="La photo de bb">
        <span class="icon is-small is-left">
          <i class="fas fa-file-upload"></i>
        </span>
        <span class="icon is-small is-right">
          <i class="fas fa-check"></i>
        </span>
      </p>
      <button type="submit" class="button button-login is-rounded">Ajouter un enfant</button>
    </form>
<br>
</div>
</div>