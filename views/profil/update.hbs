{{>header}}
<div class="tabs is-centered">
  <ul>
    <li class="is-active"><a>Mes enfants</a></li>
    <li><a href="/add-baby">Ajouter un enfant</a></li>
    <li><a href="/update">Mise à jour de vos infos</a></li>
    <li><a href="/manage">Gérer la garde</a></li>
  </ul>
</div>
<br>
<div class="container section">
  <div class="form form-signup" id="form">
<h1 class="title-form">Mise à jour de mes infos</h1>
      <div class="form form-signup" id="form">
        <form action="/update" method="post" enctype="multipart/form-data">
          <p class="control has-icons-left has-icons-right">
            <input class="input" type="text" name="username" placeholder={{username}}>
            <span class="icon is-small is-left">
              <i class="far fa-user"></i>
            </span>
            <span class="icon is-small is-right">
              <i class="fas fa-check"></i>
            </span>
          </p>

          <p class="control has-icons-left has-icons-right">
            <input class="input" type="text" name="email" placeholder={{email}}>
            <span class="icon is-small is-left">
              <i class="fas fa-envelope"></i>
            </span>
            <span class="icon is-small is-right">
              <i class="fas fa-check"></i>
            </span>
          </p>

          <p class="control has-icons-left has-icons-right">
            <input class="input" type="password" name="password" placeholder="Password">
            <span class="icon is-small is-left">
              <i class="fas fa-unlock"></i>
            </span>
            <span class="icon is-small is-right">
              <i class="fas fa-check"></i>
            </span>
          </p>

          <p class="control has-icons-left has-icons-right">
            <input class="input" type="file" name="photo" placeholder={{avatar}}>
            <span class="icon is-small is-left">
              <i class="fas fa-file-upload"></i>
            </span>
            <span class="icon is-small is-right">
              <i class="fas fa-check"></i>
            </span>
          </p>


          {{#if errorMessage}}
          <div class="error-message">{{errorMessage}}</div>
          {{/if}}
          <button type="submit" class="button button-login is-rounded">Mettre à jour</button>
        </form>
      </div>
  </div>
</div>