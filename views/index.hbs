<div class="container">


  <div class="avatar">
    <div class="avatar-baby-pic">
      <img src="{{user.avatar}}" alt="user photo">
    </div>
    <div class="avatar-name">{{user.username}}</div>
  </div>


  <ul>
    {{#each posts}}
    <li>
      <p>
        <a href="/posts/{{id}}">{{content}}</a>
      </p>
    </li>
    {{else}}
    no post
    {{/each}}
  </ul>

  {{#unless user}}
  <p>
    <a href="/signup">Signup</a> or <a href="/login">Login</a>
  </p>
  {{else}}
  <p>
    <a href="/posts/new">New post</a> <a href="/logout">Logout</a>
  </p>
  {{/unless}}
</div>

<div class="columns is-desktop">
  {{#each daysCalendar}}
  <div class="column daily-card">
    <div class="daily-card__date">
      <div class="daily-card__date--container">
        <span class="numb">7</span>
        <span class="month">juin</span>
      </div>
    </div>
  </div>
  {{/each}}
</div>


</div>